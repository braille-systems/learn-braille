<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="practiceViewModel"
            type="com.github.braillesystems.learnbraille.screens.practice.PracticeViewModel" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/constraintLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".screens.practice.PracticeFragment">

        <TextView
            android:id="@+id/letter"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:scaleX="@dimen/letter_practice_scale_of_view"
            android:scaleY="@dimen/letter_practice_scale_of_view"
            android:text="@{practiceViewModel.symbol}"
            android:textSize="170sp"
            android:textStyle="bold"
            app:layout_constraintBottom_toTopOf="@+id/practice_buttons"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:text="M" />

        <com.github.braillesystems.learnbraille.views.BrailleDotsView
            android:id="@+id/practice_buttons"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:scaleX="@dimen/braille_dots_scale_of_view"
            android:scaleY="@dimen/braille_dots_scale_of_view"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="@dimen/practice_dots_vertical_bias" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/hint_button"
            android:layout_width="@dimen/practice_buttons_width"
            android:layout_height="@dimen/practice_buttons_height"
            android:contentDescription="@string/practice_hint"
            android:onClick="@{() -> practiceViewModel.onHint()}"
            android:scaleType="fitCenter"
            android:text="?"
            android:textColor="@color/colorOnPrimary"
            android:textSize="50sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="@dimen/practice_buttons_vertical_bias"
            app:shapeAppearanceOverlay="@style/sideLeftButtonsShape" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/next_button"
            style="@style/sideIconButtons"
            android:layout_width="@dimen/practice_buttons_width"
            android:layout_height="@dimen/practice_buttons_height"
            android:contentDescription="@string/lessons_next"
            android:onClick="@{() -> practiceViewModel.onCheck()}"
            app:icon="@drawable/navigate_right"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="@dimen/practice_buttons_vertical_bias"
            app:shapeAppearanceOverlay="@style/sideRightButtonsShape" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>