<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/constraintMenuLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MenuFragment">


        <Button
            android:id="@+id/practice_button"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:text="@string/menu_practice"
            android:textSize="36sp"
            app:layout_constraintBottom_toTopOf="@+id/offline_practice_button"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="1.0" />

        <Button
            android:id="@+id/offline_practice_button"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:text="@string/offline_practice"
            android:textSize="36sp"
            app:layout_constraintBottom_toTopOf="@+id/exit_button"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/practice_button"
            app:layout_constraintVertical_bias="0.0" />

        <Button
            android:id="@+id/exit_button"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:text="@string/menu_exit"
            android:textSize="36sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/offline_practice_button" />
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>