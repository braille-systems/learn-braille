<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/navigation"
    app:startDestination="@id/menuFragment">

    <fragment
        android:id="@+id/greetingFragment"
        android:name="com.github.braillesystems.learnbraille.screens.greeting.GreetingFragment"
        android:label="fragment_greeting"
        tools:layout="@layout/fragment_greeting">
        <action
            android:id="@+id/action_greetingFragment_to_menuFragment"
            app:destination="@id/menuFragment"
            app:popEnterAnim="@anim/fragment_close_enter"
            app:popUpTo="@+id/greetingFragment"
            app:popUpToInclusive="true" />
    </fragment>
    <fragment
        android:id="@+id/menuFragment"
        android:name="com.github.braillesystems.learnbraille.screens.menu.MenuFragment"
        android:label="fragment_menu"
        tools:layout="@layout/fragment_menu">
        <action
            android:id="@+id/action_menuFragment_to_practiceFragment"
            app:destination="@id/practiceFragment" />
        <action
            android:id="@+id/action_menuFragment_to_exitFragment"
            app:destination="@id/exitFragment" />
    </fragment>
    <fragment
        android:id="@+id/exitFragment"
        android:name="com.github.braillesystems.learnbraille.screens.exit.ExitFragment"
        android:label="fragment_exit"
        tools:layout="@layout/fragment_exit" />
    <fragment
        android:id="@+id/practiceFragment"
        android:name="com.github.braillesystems.learnbraille.screens.practice.PracticeFragment"
        android:label="fragment_practice"
        tools:layout="@layout/fragment_practice" />
    <fragment
        android:id="@+id/helpFragment"
        android:name="com.github.braillesystems.learnbraille.screens.help.HelpFragment"
        android:label="HelpFragment">
        <argument
            android:name="help_message"
            android:defaultValue="@null"
            app:argType="string"
            app:nullable="true" />
    </fragment>

    <action
        android:id="@+id/action_global_menuFragment"
        app:destination="@id/menuFragment"
        app:popUpTo="@id/menuFragment" />
    <action
        android:id="@+id/action_global_helpFragment"
        app:destination="@id/helpFragment" />

    <fragment
        android:id="@+id/infoFragment"
        android:name="com.github.braillesystems.learnbraille.screens.lessons.InfoFragment"
        android:label="InfoFragment">
        <argument
            android:name="step"
            app:argType="string" />
    </fragment>
    <fragment
        android:id="@+id/inputDotsFragment"
        android:name="com.github.braillesystems.learnbraille.screens.lessons.InputDotsFragment"
        android:label="InputDotsFragment">
        <argument
            android:name="step"
            app:argType="string" />
    </fragment>
    <fragment
        android:id="@+id/inputSymbolFragment"
        android:name="com.github.braillesystems.learnbraille.screens.lessons.InputSymbolFragment"
        android:label="InputSymbolFragment">
        <argument
            android:name="step"
            app:argType="string" />
    </fragment>
    <fragment
        android:id="@+id/showDotsFragment"
        android:name="com.github.braillesystems.learnbraille.screens.lessons.ShowDotsFragment"
        android:label="ShowDotsFragment">
        <argument
            android:name="step"
            app:argType="string" />
    </fragment>
    <fragment
        android:id="@+id/showSymbolFragment"
        android:name="com.github.braillesystems.learnbraille.screens.lessons.ShowSymbolFragment"
        android:label="ShowSymbolFragment">
        <argument
            android:name="step"
            app:argType="string" />
    </fragment>
    <fragment
        android:id="@+id/lastInfoFragment"
        android:name="com.github.braillesystems.learnbraille.screens.lessons.LastInfoFragment"
        android:label="LastInfoFragment">
        <argument
            android:name="step"
            app:argType="string" />
    </fragment>
    <fragment
        android:id="@+id/firstInfoFragment"
        android:name="com.github.braillesystems.learnbraille.screens.lessons.FirstInfoFragment"
        android:label="FirstInfoFragment">
        <argument
            android:name="step"
            app:argType="string" />
    </fragment>

    <action
        android:id="@+id/action_global_showSymbolFragment"
        app:destination="@id/showSymbolFragment"
        app:popUpTo="@id/menuFragment" />
    <action
        android:id="@+id/action_global_infoFragment"
        app:destination="@id/infoFragment"
        app:popUpTo="@id/menuFragment" />
    <action
        android:id="@+id/action_global_inputDotsFragment"
        app:destination="@id/inputDotsFragment"
        app:popUpTo="@id/menuFragment" />
    <action
        android:id="@+id/action_global_inputSymbolFragment"
        app:destination="@id/inputSymbolFragment"
        app:popUpTo="@id/menuFragment" />
    <action
        android:id="@+id/action_global_showDotsFragment"
        app:destination="@id/showDotsFragment"
        app:popUpTo="@id/menuFragment" />
    <action
        android:id="@+id/action_global_lastInfoFragment"
        app:destination="@id/lastInfoFragment"
        app:popUpTo="@id/menuFragment" />
    <action
        android:id="@+id/action_global_firstInfoFragment"
        app:destination="@id/firstInfoFragment"
        app:popUpTo="@id/menuFragment" />
</navigation>
