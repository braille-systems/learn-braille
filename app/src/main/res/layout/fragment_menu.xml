<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <com.google.android.material.button.MaterialButton
            android:id="@+id/lessons_button"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:insetLeft="8dp"
            android:insetRight="8dp"
            android:text="@string/menu_continue"
            android:textColor="@color/colorOnSecondary"
            android:textSize="@dimen/menu_text_size"
            app:backgroundTint="@color/colorSecondary"
            app:shapeAppearanceOverlay="@style/bigButtonsShape"
            tools:ignore="SpUsage" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/practice_button"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:insetLeft="8dp"
            android:insetRight="8dp"
            android:text="@string/menu_practice"
            android:textColor="@color/colorOnSecondary"
            android:textSize="@dimen/menu_text_size"
            app:shapeAppearanceOverlay="@style/bigButtonsShape"
            tools:ignore="SpUsage" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/browser_button"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:insetLeft="8dp"
            android:insetRight="8dp"
            android:text="@string/menu_browser"
            android:textColor="@color/colorOnSecondary"
            android:textSize="@dimen/menu_text_size"
            app:backgroundTint="@color/colorSecondary"
            app:shapeAppearanceOverlay="@style/bigButtonsShape"
            tools:ignore="SpUsage" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/stats_button"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:insetLeft="8dp"
            android:insetRight="8dp"
            android:text="@string/menu_stats"
            android:textColor="@color/colorOnSecondary"
            android:textSize="@dimen/menu_text_size"
            app:shapeAppearanceOverlay="@style/bigButtonsShape"
            tools:ignore="SpUsage" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/qr_practice_button"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:insetLeft="8dp"
            android:insetRight="8dp"
            android:text="@string/menu_qt"
            android:textColor="@color/colorOnSecondary"
            android:textSize="@dimen/menu_text_size"
            app:backgroundTint="@color/colorSecondary"
            app:shapeAppearanceOverlay="@style/bigButtonsShape"
            tools:ignore="SpUsage" />


        <com.google.android.material.button.MaterialButton
            android:id="@+id/settings_button"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:insetLeft="8dp"
            android:insetRight="8dp"
            android:text="@string/menu_settings"
            android:textColor="@color/colorOnSecondary"
            android:textSize="@dimen/menu_text_size"
            app:shapeAppearanceOverlay="@style/bigButtonsShape"
            tools:ignore="SpUsage" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/exit_button"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:insetLeft="8dp"
            android:insetRight="8dp"
            android:text="@string/menu_exit"
            android:textColor="@color/colorOnSecondary"
            android:textSize="@dimen/menu_text_size"
            app:backgroundTint="@color/colorSecondary"
            app:shapeAppearanceOverlay="@style/bigButtonsShape"
            tools:ignore="SpUsage" />

    </LinearLayout>
</layout>